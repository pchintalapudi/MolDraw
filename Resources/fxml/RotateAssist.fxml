<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="TOP_CENTER" styleClass="standard-vbox" type="VBox" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label text="Rotate by (degrees)" />
        <TextField fx:id="angleField" onAction="#rotate" promptText="Angle" />
        <Hyperlink fx:id="lastAngle" onAction="#lastAngle" text="Last Angle: " />
    </children>
</fx:root>
